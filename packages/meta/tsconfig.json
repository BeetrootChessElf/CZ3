{
  "compilerOptions": {
    "module": "NodeNext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "lib": ["es2020"],
    "types": ["node"],
    "target": "es2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "removeComments": true,
    "declaration": true,
    "declarationMap": true
  },
  "esm": true,
  "compileOnSave": true,
  "include": ["."],
  "exclude": ["dist", "lib", "build", "node_modules"]
}
