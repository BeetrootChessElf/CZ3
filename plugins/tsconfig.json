{
  "compilerOptions": {
    "module": "esnext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "target": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "removeComments": true,
    "jsx": "react-jsx"
  },
  "esm": true,
  "compileOnSave": true,
  "include": [
    "**/*"
  ],
  "exclude": ["node_modules", "lib"]
}
